/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/ampliseq -profile test
 */

params {
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  FW_primer = "GTGYCAGCMGCCGCGGTAA"
  RV_primer = "GGACTACNVGGGTWTCTAAT"
  classifier = "https://github.com/nf-core/test-datasets/raw/ampliseq/testdata/GTGYCAGCMGCCGCGGTAA-GGACTACNVGGGTWTCTAAT-classifier.qza"
  metadata = "https://github.com/nf-core/test-datasets/raw/ampliseq/testdata/Metadata_multi.tsv"
  outdir = "./results"
  temp_dir = "./results/tmp_dir"

  
  readPaths = [
    ['1_S103', ['https://raw.githubusercontent.com/nf-core/test-datasets/ampliseq/testdata/run1/1_S103_L001_R1_001.fastq.gz', 'https://raw.githubusercontent.com/nf-core/test-datasets/ampliseq/testdata/run1/1_S103_L001_R2_001.fastq.gz']],
    ['1a_S103', ['https://raw.githubusercontent.com/nf-core/test-datasets/ampliseq/testdata/run1/1a_S103_L001_R1_001.fastq.gz', 'https://raw.githubusercontent.com/nf-core/test-datasets/ampliseq/testdata/run1/1a_S103_L001_R2_001.fastq.gz']],
    ['2_S115', ['https://raw.githubusercontent.com/nf-core/test-datasets/ampliseq/testdata/run2/2_S115_L001_R1_001.fastq.gz', 'https://raw.githubusercontent.com/nf-core/test-datasets/ampliseq/testdata/run2/2_S115_L001_R2_001.fastq.gz']],
    ['2a_S115', ['https://raw.githubusercontent.com/nf-core/test-datasets/ampliseq/testdata/run2/2a_S115_L001_R1_001.fastq.gz', 'https://raw.githubusercontent.com/nf-core/test-datasets/ampliseq/testdata/run2/2a_S115_L001_R2_001.fastq.gz']]
  ]
  params.multipleSequencingRuns = true
}
